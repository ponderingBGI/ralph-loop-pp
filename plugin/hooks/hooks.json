{
  "description": "Ralph-Loop++ hooks for multi-agent orchestration and metric checking",
  "hooks": {
    "Stop": [
      {
        "matcher": "ralph-loop-pp:*",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/worker-stop-hook.sh",
            "timeout": 300
          }
        ]
      }
    ]
  }
}
